<tr id="reminder-<%= reminder.id %>">
    <td><%= link_to(h(reminder.query.name), edit_query_path(reminder.query)) %></td>
    <td><%= reminder.roles.collect {|r| r.name}.join(',') %></td>
    <td><%= MailReminder.interval_value_display(reminder.interval,reminder.interval_value) %></td>
    <td class="buttons">
        <%= link_to l(:button_edit), edit_project_mail_reminder_path(@project, reminder), :class => 'icon icon-edit', :remote => true %>
        <%= link_to l(:button_delete), project_mail_reminder_path(@project, reminder), :class => 'icon icon-del', :remote => true,
          :method => :delete, :data => {:confirm => l(:reminder_delete_confirmation)} %>
    </td>
</tr>
